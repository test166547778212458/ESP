<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/textmsg"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="50dp" />

        <EditText
            android:layout_width="345dp"
            android:layout_height="215dp"
            android:id="@+id/editText"
            android:layout_gravity="center"
            android:hint="@string/urvtot"
            android:textIsSelectable="false"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textColor="@color/abc_color_highlight_material"
            android:layout_marginBottom="30dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:id="@+id/button2"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="30dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="18dp" />

        <ImageButton
            android:layout_width="91dp"
            android:layout_height="82dp"
            android:id="@+id/imageButton"
            android:layout_gravity="right|bottom"
            android:src="@android:drawable/ic_btn_speak_now"
            android:backgroundTint="@color/abc_background_cache_hint_selector_material_light"
            android:layout_marginBottom="80dp"
            android:layout_marginRight="27dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="you can record your voice "
            android:id="@+id/textView2"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="111dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/abc_background_cache_hint_selector_material_dark"
            android:textStyle="bold"
            android:textSize="19dp" />

    </FrameLayout>
</LinearLayout>