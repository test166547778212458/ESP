<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageButton9"
        android:src="@drawable/back"
        android:background="@android:color/transparent"
        android:layout_margin="10dp"
        android:onClick="back" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_below="@+id/firstaid_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/firstaid_image"
        android:layout_height="100dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstaid_image"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/firstaid_key"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:fontFamily="serif"
        android:textSize="14sp"
        android:textColor="@color/red" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstaid_title"
        android:layout_below="@+id/imageButton9"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:fontFamily="serif"
        android:typeface="normal"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@color/darkred"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstaid_key"
        android:scrollbars = "vertical"
        android:fadeScrollbars="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/firstaid_content"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="14sp"
        android:fontFamily="serif"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp" />
</RelativeLayout>
